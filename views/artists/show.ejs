<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <title>GOAT Talk</title>

</head>
<body>
    <nav>
        <ul>
          <% if (user) { %>
            <li> <a href="/">Home</a> </li>
            <li> <a href="/artists">All Artists</a> </li>
            <li> <a href="/artists/new" >ADD Artist</a> </li>
            <li> <a href="/logout">LOG OUT</a> </li>
          <% } else { %>
            <li> <a href="/auth/google" class="login">LOG IN&nbsp;<img src="https://i.imgur.com/FHjYyi0.png"></a> </li>
          <% } %>
      </nav>
    </ul>
    <main>
        <section id="show-page">
            <div>Artist: </div>
            <div><%= artist.name %></div>
            <div>Decade: </div>
            <div><%= artist.decade %></div>
            <div>Genre: </div>
            <div><%= artist.genre %></div>

          <br><br>
          <h2>Comments</h2>
          <% if (user) { %>
            <form id="add-comment-form" method="POST" action="/artists/<%= artist._id %>/comments">
              <label>Comment:</label>
              <textarea name="content"></textarea>
              <input type="submit" value="Add Comment">
            </form>
          <% } %>

          <% if (artist.comments.length) { %>
            <table>
              <thead>
                <tr>
                  <th>User</th>
                  <th>Date</th>
                  <th>Comment</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% artist.comments.forEach(function(c) { %>
                  <tr>
                    <td class="review-user"><img src="<%= c.userAvatar %>"><%= c.userName %></td>
                    <td><%= c.createdAt.toLocaleDateString() %></td>
                    <td><%= c.content %></td>
                  </tr>
                <% }); %>
                <tr>
                  <td colspan="3"></td>
                  <td><strong><%= (total / artist.comments.length).toFixed(1) %></strong></td>
                </tr>
              </tbody>
            </table>
          <% } else { %>
            <h5>No Comments Yet</h5>
          <% } %>


    </main>


</body>
</html>
